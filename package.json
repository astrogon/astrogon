{
  "name": "Astrogon",
  "version": "1.0.0",
  "description": "Template.",
  "author": "Jane Doe",
  "license": "MIT",
  "packageManager": "npm@10.8.2",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "postbuild": "pagefind --site dist",
    "postinstall": "npm run install-vale",
    "format": "prettier -w ./src --log-level silent",
    "format:check": "prettier --check ./src --log-level silent",
    "lint": "eslint ./src --ext .js,.ts,.jsx,.tsx,.astro --fix",
    "lint:check": "eslint ./src --ext .js,.ts,.jsx,.tsx,.astro",
    "install-vale": "node -e \"const cmd = process.platform === 'win32' ? 'powershell -ExecutionPolicy Bypass -File scripts/install-vale.ps1' : 'bash scripts/install-vale.sh'; require('child_process').exec(cmd, (err, stdout, stderr) => { if (err) { console.error(stderr); process.exit(1); } console.log(stdout); })\"",
    "prose": "node -e \"const vale = process.platform === 'win32' ? './tools/vale.exe' : './tools/vale'; const { exec } = require('child_process'); exec(vale + ' --config=.vale.ini src/content docs', (err, stdout, stderr) => { console.log(stdout); if (stderr) console.error(stderr); if (err) process.exit(1); });\"",
    "prose:check": "npm run prose",
    "lint:all": "npm run format && npm run lint && npm run prose",
    "lint:checkall": "npm run format:check && npm run lint:check && npm run prose:check",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.4",
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.5.0",
    "@astrojs/tailwind": "^6.0.2",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "astro": "^5.13.2",
    "astro-auto-import": "^0.4.2",
    "astro-tooltips": "^0.6.2",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "fuse.js": "^6.6.2",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "katex": "^0.16.21",
    "marked": "^6.0.0",
    "prettier-plugin-astro": "^0.11.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-lite-youtube-embed": "^2.3.52",
    "rehype-katex": "^7.0.1",
    "remark-collapse": "^0.1.2",
    "remark-math": "^6.0.0",
    "remark-toc": "^8.0.1",
    "sharp": "^0.32.4",
    "swiper": "^10.1.0",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.9",
    "@types/marked": "^5.0.1",
    "@types/node": "20.4.8",
    "@types/react": "18.2.18",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "astro-eslint-parser": "^0.16.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.46.0",
    "eslint-plugin-astro": "^0.29.1",
    "husky": "^8.0.3",
    "pagefind": "^1.0.4",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "prettier-plugin-astro": "^0.11.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "sass": "^1.64.2",
    "tailwind-bootstrap-grid": "^5.0.1",
    "tailwindcss": "^3.3.3",
    "typescript": "5.1.6",
    "wrangler": "^4.24.0"
  }
}
