---
import type { ProductsEntry } from '@/types';
import { Image } from "astro:assets";



interface Props {
  entry: ProductsEntry;
}

const { entry }: Props = Astro.props;
const { productName, imageLink, imageAlt, description } = entry.data;

---


<div class="mb-14 md:col-6 lg:col-4">
  <div
    class="glass rounded-lg p-4 text-center intersect:animate-fadeUp opacity-0"
  >
    {
      imageLink && (
        <Image
          class="mx-auto mb-6 rounded"
          src={imageLink}
          alt={imageAlt}
          width={120}
          height={120}
          loading="eager"
        />
      )
    }
    <h4 class="mb-3">
      <a href={`/products/${entry.id}`}>{productName}</a>
    </h4>
    {description && <p class="mb-4">{description}</p>}
    <!-- <Social links={social} /> -->
  </div>
</div>