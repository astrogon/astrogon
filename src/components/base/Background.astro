---
// Twinkling Star Background 
const numStars = 1024;
const stars = Array.from({ length: numStars }).map(() => ({
  left: `${Math.random() * 100}%`,
  top: `${Math.random() * 100}%`,
  size: `${Math.random() * 3 + 1}px`,
  delay: `${5 * Math.random()}s`,
}));
---
<div
  class="fixed top-0 left-0 w-full h-full -z-1 pointer-events-none overflow-hidden"
>
  {
    stars.map(({ left, top, size, delay }) => (
      <div
        class="absolute bg-bg-p dark:bg-white rounded-full animate-twinkle"
        style={`
            left: ${left};
            top: ${top};
            width: ${size};
            height: ${size};
            animation-delay: ${delay};
        `}
      />
    ))
  }
</div>

