---
import BaseLayout from "@components/base/BaseLayout.astro";
import PageHeader from "@components/common/PageHeader.astro";

// Get URL parameters for success states (Formspree redirects here)
const success = Astro.url.searchParams.get("success");

/**
 * For Formspree (If not using Netlify):
 * Sign up at formspree.io
 * Create a new form and get your form ID
 * Replace the current contact form with the Formspree version:
 *
 */
---

<BaseLayout title="Contact Us" description="Get in touch with us">
  <PageHeader title="Contact Us" />
  
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-8">
          
          <!-- Success Message -->
          {success && (
            <div class="glass rounded-lg p-6 mb-6 border-l-4 border-green-500">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <p class="text-green-700 font-medium">
                  Thank you for your message! We'll get back to you soon.
                </p>
              </div>
            </div>
          )}

          <!-- Contact Form with Formspree -->
          <div class="glass rounded-lg p-8 intersect:animate-fadeUp opacity-0">
            <h2 class="text-xl font-semibold mb-6">Send us a message</h2>
            
            <!-- 
              FORMSPREE SETUP INSTRUCTIONS:
              1. Sign up at https://formspree.io
              2. Create a new form
              3. Replace "YOUR_FORM_ID" below with your actual form ID
              4. Optional: Set up custom redirect in Formspree dashboard
            -->
            <form 
              action="https://formspree.io/f/YOUR_FORM_ID"
              method="POST"
              class="space-y-6"
            >
              <!-- Formspree redirect (optional) -->
              <input type="hidden" name="_next" value="https://yourdomain.com/contact?success=true" />
              
              <!-- Formspree subject line -->
              <input type="hidden" name="_subject" value="New contact form submission" />
              
              <!-- Formspree autoresponse (optional) -->
              <input type="hidden" name="_autoresponse" value="Thank you for your message! We'll get back to you soon." />

              <!-- Name Field -->
              <div>
                <label for="name" class="block text-sm font-medium mb-2">
                  Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="Your full name"
                />
              </div>

              <!-- Email Field -->
              <div>
                <label for="email" class="block text-sm font-medium mb-2">
                  Email <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="your.email@example.com"
                />
              </div>

              <!-- Subject Field -->
              <div>
                <label for="subject" class="block text-sm font-medium mb-2">
                  Subject
                </label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="What is this about?"
                />
              </div>

              <!-- Message Field -->
              <div>
                <label for="message" class="block text-sm font-medium mb-2">
                  Message <span class="text-red-500">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-vertical"
                  placeholder="Tell us how we can help you..."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-all duration-200 font-medium"
              >
                Send Message
              </button>
            </form>
          </div>

          <!-- Setup Instructions -->
          <div class="mt-8 glass rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4">ðŸ”§ Setup Instructions</h3>
            <div class="space-y-4 text-sm">
              <div>
                <h4 class="font-medium text-blue-600">For Formspree:</h4>
                <ol class="list-decimal list-inside space-y-1 ml-4 mt-2">
                  <li>Sign up at <a href="https://formspree.io" target="_blank" class="underline">formspree.io</a></li>
                  <li>Create a new form and get your form ID</li>
                  <li>Replace "YOUR_FORM_ID" in the form action</li>
                  <li>Update the "_next" field with your actual domain</li>
                </ol>
              </div>
              
              <div>
                <h4 class="font-medium text-green-600">For Netlify Forms:</h4>
                <ol class="list-decimal list-inside space-y-1 ml-4 mt-2">
                  <li>Deploy this site to Netlify</li>
                  <li>Use the main contact form (already configured)</li>
                  <li>Forms will appear in your Netlify dashboard</li>
                  <li>100 submissions/month free</li>
                </ol>
              </div>
            </div>
          </div>

          <!-- Additional Contact Info -->
          <div class="mt-8 glass rounded-lg p-6 text-center intersect:animate-fadeUp opacity-0">
            <h3 class="text-lg font-semibold mb-4">Other ways to reach us</h3>
            <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-8">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <span>hello@example.com</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <span>+1 (555) 123-4567</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
